{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}